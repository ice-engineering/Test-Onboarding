{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rgName": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "workspaceName": {
            "type": "string",
            "metadata": {
                "description": "Name for the Log Analytics workspace"
            }
        },
        "enableNativeWorkbooksKind": {
            "type": "array",
            "metadata": {
                "description": "All native Azure workbooks can be deployed."
            },
            "defaultValue": []
        }
    },
    "resources": [
        {
            "condition": "[not(empty(parameters('enableNativeWorkbooksKind')))]",
            "name": "WorkbookDeployment",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "location": "[parameters('location')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",   
                    "resources": [
                        {
                            "name": "[concat('Workbook_',parameters('enableNativeWorkbooksKind')[copyIndex('workbookDeployment')])]",
                            "type": "Microsoft.Insights/workbooks",
                            "location": "[parameters('location')]",
                            "kind": "shared",
                            "apiVersion": "2018-06-17-preview",
                            "dependsOn": [],
                            "properties": {
                                "serializedData": [ {"uri": "[concat('https://raw.githubusercontent.com/Azure/Azure-Sentinel/master/Workbooks/',parameters('enableNativeWorkbooksKind')[copyIndex('workbookDeployment')],'.json')]"} ],
                                "version": "1.0"
                            },
                            "parameters": {
                                "workspaceName": {
                                    "value": "[parameters('workspaceName')]"
                                },
                                "tenantId": {
                                    "value": "[subscription().tenantId]"
                                },
                                "subscriptionId": {
                                    "value": "[subscription().subscriptionId]"
                                },
                                "rgName": {
                                    "value": "[parameters('rgName')]"
                                },
                                "location": {
                                    "value": "[parameters('location')]"
                                }
                            },
                            "copy": {
                                "name": "workbookDeployment",
                                "count": "[length(parameters('enableNativeWorkbooksKind'))]"
                            }  
                        }
                    ]
                }                              
            }   
        }
    ],
    "outputs": {
        "workspaceName": {
            "type": "string",
            "value": "[parameters('workspaceName')]"
        }
    }
}
